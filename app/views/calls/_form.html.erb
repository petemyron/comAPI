<%= form_for(@call) do |f| %>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% if @call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
      <% @call.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :method_name %><br />
    <%= f.text_field :method_name %>
  </div>
  <div class="field">
    <%= f.label :endpoint_uri %><br />
    <%= f.text_field :endpoint_uri %>
  </div>
  <div class="field">
    <%= f.label :method_type %><br/>
    <%= f.select :method_type, options_for_select( [ "GET", "POST", "PUT", "DELETE" ], @call.method_type) %>
  </div>
  <div class="field">
    <%= f.label :group_id %><br />
    <%= f.collection_select :group_id, Group.all, :id, :name, :prompt => "Please select a group" %>
    or create one: 
    <%= f.text_field :new_group_name %>
  </div>
  <div class="field">
    <%= f.label :xml, "Body" %><br />
    <%= f.text_area :xml, :cols=>100, :rows=>40 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

