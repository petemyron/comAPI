<% @common_params.each do |common_param| %>
<% @common_param = common_param -%>
  <tr>
    <td><%= common_param.name %></td>
    <td>
      <%= form_for(@common_param)  do |f| %>
        <%= f.text_field :value %>
        <%= hidden_field_tag "redirect_to", "calls_path" %>
        <%= f.submit "Update" %>
      <% end %>
    </td>

    <td><%= link_to 'Show', common_param %></td>
    <td><%= link_to 'Edit', edit_common_param_path(common_param) %></td>
    <td><%= link_to 'Destroy', common_param, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

