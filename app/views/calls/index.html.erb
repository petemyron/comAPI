<% @calls.each do |call| %>
  <tr>
    <td><%= call.method_name %></td>
    <td><%= call.endpoint_uri %></td>
    <td class="xml">Request:<br /><pre><%= call.xml %></pre></td>
    <td><%= link_to 'Show', call %></td>
    <td><%= link_to 'Edit', edit_call_path(call) %></td>
    <td><%= link_to 'Destroy', call, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Execute', execute_request_path(call) %></td>
  </tr>
<% end %>
</table>

