<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Calls</th>
    <th></th>
    <th></th>
    <% if admin? %>
      <th></th>
    <% end %>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= group.description %></td>
    <td><% group.calls.each do |call| %>
          <%= call.method_name %><br />
        <% end %>
    </td>
    <td><%= link_to 'Show', group %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <% if admin? %>
      <td><%= button_to 'Delete', group, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Group', new_group_path, :method => :get %>
