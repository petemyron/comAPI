<h1>Common Parameters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @common_params.sort_by(&:name).each do |common_param| %>
  <tr>
    <td><%= common_param.name %></td>
    <td><%= common_param.value %></td>
    <td><%= button_to 'Show', common_param, :method => :get %></td>
    <td><%= button_to 'Edit', edit_common_param_path(common_param), :method => :get %></td>
    <td><%= button_to 'Delete', common_param, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Parameter', new_common_param_path, :method => :get %>

